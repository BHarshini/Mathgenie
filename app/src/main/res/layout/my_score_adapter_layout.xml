            android:layout_weight="1"
            android:fontFamily="@font/logo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_margin="3dp"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/stars2"
